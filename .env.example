# Turn Restriction Validator Configuration
# Copy this file to .env and adjust values as needed

# ===========================================
# Overpass API Configuration
# ===========================================

# Overpass API endpoint URL
OVERPASS_URL=https://overpass-api.hudhud.cloud/api/interpreter

# Timeout for Overpass requests in seconds
OVERPASS_TIMEOUT=30

# Number of retries for failed Overpass requests
OVERPASS_RETRIES=3

# ===========================================
# Cache Configuration
# ===========================================

# Cache time-to-live in seconds
# How long to cache Overpass results before refetching
CACHE_TTL_SECONDS=300

# Maximum number of cached items (LRU cache)
CACHE_MAX_SIZE=1000

# Optional: Redis URL for distributed caching
# Leave empty to use in-memory cache only
# Example: redis://localhost:6379/0
REDIS_URL=

# ===========================================
# Rate Limiting
# ===========================================

# Maximum requests per minute per IP address
RATE_LIMIT_RPM=60

# ===========================================
# Server Configuration
# ===========================================

# Server port
PORT=8080

# Server host (use 0.0.0.0 for Docker)
HOST=0.0.0.0

# Debug mode (enables detailed error messages)
DEBUG=false

# CORS allowed origins (comma-separated)
# Use * for development, restrict in production
CORS_ORIGINS=*
